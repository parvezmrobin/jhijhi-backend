{
  "parser": "babel-eslint",
  "extends": ["plugin:promise/recommended"],
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-console": "warn",
    "prefer-const": "warn",
    "prefer-template": "error",
    "max-len": ["warn", 120],
    "semi": "error",
    "comma-dangle": ["warn", "always-multiline"]
  }
}
