{
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "plugin:promise/recommended"],
  "env": {
    "node": true
  },
  "rules": {
    "no-console": "warn",
    "max-len": ["warn", 120],
    "semi": "error",
    "comma-dangle": ["error", "always-multiline"],
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "no-restricted-syntax": "off",
    "no-await-in-loop": "off",
    "no-continue": "off",
    "object-curly-spacing": "off",
    "guard-for-in": "off"
  }
}
